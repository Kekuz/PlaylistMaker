<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_text_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="big_text_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="normal_text_style">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="little_text_style">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="background_color">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="bottom_navigation">
        <item name="itemTextAppearanceInactive">@style/MyBottomNavigationView</item>
        <item name="itemTextAppearanceActive">@style/MyBottomNavigationView</item>
        <item name="android:background">@color/yp_black</item>
        <item name="elevation">0dp</item>
        <item name="itemRippleColor">@color/yp_ripple_blue</item>
        <item name="itemTextColor">@color/bottom_navigation_items_color</item>
        <item name="itemIconTint">@color/bottom_navigation_items_color</item>
    </style>

    <style name="snackbar" parent="Widget.Material3.Snackbar">
        <item name="android:backgroundTint">@color/yp_white</item>
    </style>

    <style name="snackbar_text_style">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

</resources>