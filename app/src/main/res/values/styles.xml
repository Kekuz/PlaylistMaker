<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="menu_bnt_style" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/menu_btn_icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/menu_btn_corner_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

    </style>

    <style name="settings_tv_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:layout_marginStart">@dimen/settings_list_tv_margin_start</item>

        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="settings_fl_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_menu_layout_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="menu_background">
        <item name="android:background">@color/yp_blue</item>
    </style>

    <style name="settings_background">
        <item name="android:background">@color/yp_white</item>
    </style>

    <style name="settings_text_color">
        <item name="android:background">@color/yp_white</item>
    </style>

    <style name="settings_title_color">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="settings_back_arrow_color">
        <item name="android:tint">@color/yp_black</item>
    </style>

    <style name="settings_icon_color">
        <item name="android:tint">@color/yp_text_gray</item>
        <item name="android:layout_marginEnd">@dimen/settings_list_tv_margin_end</item>
    </style>

    <style name="settings_switch_color">
        <item name="android:trackTint">@color/yp_text_gray</item>
        <item name="android:thumbTint">@color/yp_text_gray</item>
    </style>

</resources>