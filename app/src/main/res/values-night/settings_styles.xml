<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settings_tv_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
    </style>

    <style name="settings_icon_color">
        <item name="android:tint">@color/yp_white</item>
        <item name="android:layout_marginEnd">@dimen/settings_list_tv_margin_end</item>
    </style>

    <style name="settings_switch_color">
        <item name="android:trackTint">@color/yp_blue</item>
        <item name="android:thumbTint">@color/yp_blue</item>
    </style>

</resources>