<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_text_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="big_text_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="normal_text_style">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="little_text_style">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="playlist_text_style">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="main_toolbar_style">
        <item name="android:titleTextColor">@color/yp_white</item>
        <item name="android:titleTextAppearance">@style/title_text_style</item>
    </style>

    <style name="player_toolbar_style">
        <item name="android:navigationIcon">@drawable/back_arrow_24</item>
        <item name="android:titleTextAppearance">@style/title_text_style</item>
    </style>

    <style name="toolbar_style">
        <item name="android:titleTextAppearance">@style/title_text_style</item>
    </style>

    <style name="background_color">
        <item name="android:background">@color/yp_white</item>
    </style>

    <style name="bottom_navigation">
        <item name="itemTextAppearanceInactive">@style/MyBottomNavigationView</item>
        <item name="itemTextAppearanceActive">@style/MyBottomNavigationView</item>
        <item name="android:background">@color/yp_white</item>
        <item name="elevation">0dp</item>
        <item name="itemRippleColor">@color/yp_ripple_blue</item>
        <item name="itemTextColor">@color/bottom_navigation_items_color</item>
        <item name="itemIconTint">@color/bottom_navigation_items_color</item>
    </style>

    <style name="text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_text_corner_radius</item>
        <item name="boxStrokeColor">@color/yp_blue</item>
        <item name="android:textCursorDrawable">@color/yp_blue</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="helperTextTextColor">@color/yp_blue</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/yp_blue</item>
    </style>

    <style name="add_playlist_bnt" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/yp_text_gray</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
    </style>

    <style name="snackbar" >
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="snackbar_text_style">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

</resources>