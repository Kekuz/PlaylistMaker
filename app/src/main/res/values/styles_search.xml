<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="search_field_style">
        <item name="android:backgroundTint">@color/yp_light_gray</item>
    </style>

    <style name="search_field_icon_style">
        <item name="tint">@color/yp_text_gray</item>
    </style>

    <style name="search_edit_text_style">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="search_track_name_style">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/little_text_size</item>
    </style>

    <style name="search_track_author_style">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
    </style>

    <style name="search_track_time_style">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
    </style>

    <style name="search_arrow_forward_style">
        <item name="android:tint">@color/yp_text_gray</item>
    </style>

    <style name="search_error_text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/error_text_size</item>
    </style>

    <style name="search_bnt_error" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/refresh</item>
        <item name="cornerRadius">@dimen/search_error_btn_corner_radius</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
    </style>



</resources>