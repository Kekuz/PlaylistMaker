<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/settings_background"
    android:orientation="vertical"
    tools:context=".SettingsActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_arrow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@drawable/back_arrow_24"
            style="@style/settings_icon_color"/>


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/settings"
            style="@style/settings_title_color"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>


    <FrameLayout
        style="@style/settings_fl_list"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="6dp">

        <TextView
            style="@style/settings_tv_list"
            android:text="@string/dark_theme" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            style="@style/settings_switch_color"/>

    </FrameLayout>


    <FrameLayout style="@style/settings_fl_list">

        <TextView
            style="@style/settings_tv_list"
            android:text="@string/share_app" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:src="@drawable/share_app_24"
            style="@style/settings_icon_color"/>

    </FrameLayout>


    <FrameLayout style="@style/settings_fl_list">

        <TextView
            style="@style/settings_tv_list"
            android:text="@string/write_to_support" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:src="@drawable/write_to_support_24"
            style="@style/settings_icon_color"/>

    </FrameLayout>


    <FrameLayout style="@style/settings_fl_list">

        <TextView
            style="@style/settings_tv_list"
            android:text="@string/user_agreement" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:src="@drawable/arrow_forward_24"
            style="@style/settings_icon_color"/>

    </FrameLayout>

</LinearLayout>