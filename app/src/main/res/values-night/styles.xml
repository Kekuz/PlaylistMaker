<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_text_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="big_text_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="normal_text_style">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="little_text_style">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="back_arrow_color">
        <item name="android:tint">@color/yp_white</item>
    </style>

    <style name="background_color">
        <item name="android:background">@color/yp_black</item>
    </style>

</resources>