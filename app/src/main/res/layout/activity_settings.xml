<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.settings.activity.SettingsActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_arrow_btn"
            style="@style/back_arrow_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@drawable/back_arrow_24" />


        <TextView
            android:id="@+id/tvTitle"
            style="@style/title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:text="@string/settings" />

    </LinearLayout>


    <FrameLayout
        style="@style/settings_fl_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_element_layout_height"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="horizontal">

        <TextView
            style="@style/normal_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/margin_horizontal"
            android:text="@string/dark_theme" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            style="@style/settings_switch_color"
            android:id="@+id/themeSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="6dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/share_app_fl"
        style="@style/settings_fl_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_element_layout_height"
        android:orientation="horizontal">

        <TextView
            style="@style/normal_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/margin_horizontal"
            android:text="@string/share_app" />

        <ImageView
            style="@style/settings_icon_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/margin_horizontal"
            android:src="@drawable/share_app_24" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/write_to_support_fl"
        style="@style/settings_fl_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_element_layout_height"
        android:orientation="horizontal">

        <TextView
            style="@style/normal_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/margin_horizontal"
            android:text="@string/write_to_support" />

        <ImageView
            style="@style/settings_icon_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/margin_horizontal"
            android:src="@drawable/write_to_support_24" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/user_agreement_fl"
        style="@style/settings_fl_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_element_layout_height"
        android:orientation="horizontal">

        <TextView
            style="@style/normal_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/margin_horizontal"
            android:text="@string/user_agreement" />

        <ImageView
            style="@style/settings_icon_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/margin_horizontal"
            android:src="@drawable/arrow_forward_24" />

    </FrameLayout>

</LinearLayout>